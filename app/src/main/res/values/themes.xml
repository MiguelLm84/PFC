<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PFC" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="background">@color/primary</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!--item name="android:fontFamily">@font/russo_one</item-->
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/amaranth</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <!--item name="android:windowEnterTransition">@transition/explode_transition</item-->
        <!--item name="android:windowExitTransition">@transition/explode_transition</item-->
    </style>

    <style name="Theme.PFC.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PFC.EtiquetaSeleccion">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="tabTextAppearance">@color/primary</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="fontFamily">@font/amaranth</item>
    </style>
    <style name="Theme.PFC.Spinner">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/amaranth</item>
        <item name="android:windowBackground">@drawable/round_border</item>
        <!--item name="android:textAlignment">viewStart</item-->
    </style>

    <style name="Theme.PFC.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PFC.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>